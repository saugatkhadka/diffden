{
  "name": "diffden",
  "version": "0.1.0",
  "description": "Terminal UI that snapshots watched files into an internal git repository",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "diffden": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "dev": "bun run --watch src/cli.ts",
    "start": "node dist/cli.js",
    "prepublishOnly": "npm run typecheck && npm run build"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@opentui/core": "^0.1.77",
    "chokidar": "^5.0.0",
    "simple-git": "^3.30.0"
  }
}
